<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:orientation="vertical"
    android:layout_height="200dp"
    android:background="@drawable/style_item"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/imageOfGame"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_downloading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/nameOfGame"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/counter_strike_global_offensive"
        android:fontFamily="@font/font_games"
        android:textSize="20sp"
        android:maxLines="3"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageOfGame"
        />


<!--#B5150A -->


</androidx.constraintlayout.widget.ConstraintLayout>